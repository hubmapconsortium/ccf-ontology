define make_asctb_component
	if [ $(COMP) = true ]; then $(ROBOT) merge --input $(1) \
			--input $(2) \
			--input $(3) \
			--input $(4) \
			--input $(6) \
			--input $(7) \
			--input $(8) \
			--input $(9) \
			--input $(10) \
		annotate --annotation-file $(5) \
			--ontology-iri $(ONTBASE)/$@ $(ANNOTATE_ONTOLOGY_VERSION) \
			--output $@.tmp.owl && \
		mv -f $@.tmp.owl $@; fi
endef
